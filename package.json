{
  "name": "emb",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "workspaces": [
    "frontend/*",
    "backend/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "npm --workspace frontend/web run dev",
    "dev:api": "npm --workspace backend/api run start:dev"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "nodemailer": "^8.0.1"
  }
}
